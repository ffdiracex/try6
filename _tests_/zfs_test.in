#!/bin/sh

set -e

if [ "x$EUID" = "x" ] ; then
  EUID=`id -u`
fi

if [ "$EUID" != 0 ] ; then
   exit 77
fi

if ! which zpool >/dev/null 2>&1; then
   echo "zpool not installed; cannot test zfs."
   exit 77
fi

"@builddir@/holy-fs-tester" zfs
"@builddir@/holy-fs-tester" zfs_lzjb
"@builddir@/holy-fs-tester" zfs_gzip
"@builddir@/holy-fs-tester" zfs_zle
"@builddir@/holy-fs-tester" zfs_raidz3
"@builddir@/holy-fs-tester" zfs_raidz2
"@builddir@/holy-fs-tester" zfs_raidz
"@builddir@/holy-fs-tester" zfs_mirror
"@builddir@/holy-fs-tester" zfs_stripe
"@builddir@/holy-fs-tester" zfs_caseins
