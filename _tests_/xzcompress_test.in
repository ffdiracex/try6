#! /bin/sh

set -e
holyshell=@builddir@/holy-shell

. "@builddir@/holy-core/modinfo.sh"

if ! which xz >/dev/null 2>&1; then
   echo "xz not installed; cannot test xz compression."
   exit 77
fi

if [ "$(echo hello | "${holyshell}" --mkrescue-arg=--compress=xz)" != "Hello World" ]; then
   exit 1
fi
