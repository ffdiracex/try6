#! /bin/sh

set -e
holyshell=@builddir@/holy-shell

. "@builddir@/holy-core/modinfo.sh"

if ! which gzip >/dev/null 2>&1; then
   echo "gzip not installed; cannot test gzip compression."
   exit 77
fi

if [ "$(echo hello | "${holyshell}" --mkrescue-arg=--compress=gz)" != "Hello World" ]; then
   exit 1
fi
